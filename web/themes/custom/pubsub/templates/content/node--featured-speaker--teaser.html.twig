{%
  set classes = [
    'node',
    'featured-speaker',
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}

{{ include('pubsub:featured-speaker', {
  attributes,
  title_suffix,
  classes,
  link: node.field_cta_link.0.url,
  image: content.field_image,
  badge: content.field_badge,
  title: label,
  body: content.body,
}, with_context = false) }}
